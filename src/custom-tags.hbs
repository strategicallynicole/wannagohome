{{!< default}} 

{{! The tag above means: Insert everything in this file into the {body} of the default.hbs template. }} 

{{#post}} 

    <!-- POST INFO WRAPPER -->
    <div class="page-info-wrapper post-presentation lazy active {{#if feature_image}}background{{else}}background-pattern{{/if}}" {{#if feature_image}} data-src="{{feature_image}}" {{/if}}>
        <div class="gradient gradient1">
            <div class="container text-center">
                <div class="row">
                    <div class="col-sm-12 col-md col-lg col-xs-12">
                        <h1 class="animated fadeInUp">{{title}}</h1>
                        <p class="animated fadeInUp">{{excerpt words="10"}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/post}}

{{! Latest Post - Go to partials/latestPost.hbs to view this partial. }}
{{> "latestPost"}}

<div id="main">
    <div class="container">
        <div class="row">
            {{#get "tags" limit="all" include="count.posts"}}
                {{#foreach tags}}
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                        <div class="post post-square lazy post-presentation {{#if feature_image}}background{{else}}background-pattern{{/if}}"
                        {{#if feature_image}}data-src="{{feature_image}}"{{/if}}>
                            <div class="gradient gradient2 d-flex align-items-center">
                                <div class="post-info">
                                    <div class="separator"></div>
                                    <h3><a href="{{url}}">{{name}}</a></h3>
                                    <p>{{description}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/foreach}}
            {{/get}}
        </div>
    </div>
</div>

<div class="b-frame"></div>
