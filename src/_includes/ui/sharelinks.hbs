<span class="share-links">
    <span class="text-uppercase ltr-sp-1">Share On</span>
    <ul class="social-icon circle branded social-icon-sm">
        <li>
            <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute=" true"}}"="true"}}"" onclick="window.open(this.href, 'facebook-share','width=580, height=300');return false;">
                <i class="fab fa-facebook-f"></i>
            </a>
        </li>
        <li>
            <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute=" true"}}"="true"}}"" onclick="window.open(this.href, 'twitter-share', 'width=580, height=300');return false;">
                <i class="fab fa-twitter"></i>
            </a>
        </li>
        <li>
            <a href="https://linkedin.com/sharearticle?mini=true&url={{url absolute=" true"}}"="true"}}"" onclick="window.open(this.href, 'linkedin-share', 'width=580, height=300');return false;">
                <i class="fab fa-linkedin"></i>
            </a>
        </li>
    </ul>
</span>
