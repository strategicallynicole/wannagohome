<div class="next-prev-post-wrapper">
    <div class="row">
        {{#prev_post}}
            <div class="col-xs col-sm col-md col-lg">
                <div class="post post-prev post-presentation {{#if feature_image}}background{{else}}background-pattern{{/if}} lazy" {{#if feature_image}}data-src="{{feature_image}}"{{/if}}>
                    <div class="gradient gradient2 d-flex align-items-center">
                        <div class="post-info">
                            <span><i class="fa fa-chevron-left"></i> {{t "Previous Post"}}</span>
                            <h3><a href="{{url}}">{{title}}</a></h3>
                            <div class="post-tags">{{#foreach tags limit="2"}}<a href="{{url}}">{{name}}</a>{{/foreach}}</div>
                        </div>
                    </div>
                </div>
            </div>
        {{/prev_post}}
        {{#next_post}}
            <div class="col-xs-12 col-sm-12 col-md col-lg">
                <div class="post post-next post-presentation {{#if feature_image}}background{{else}}background-pattern{{/if}} lazy" {{#if feature_image}}data-src="{{feature_image}}"{{/if}}>
                    <div class="gradient gradient2 d-flex align-items-center">
                        <div class="post-info">
                            <span>{{t "Next Post"}} <i class="fa fa-chevron-right"></i></span>
                            <h3><a href="{{url}}">{{title}}</a></h3>
                            <div class="post-tags">{{#foreach tags limit="2"}}<a href="{{url}}">{{name}}</a>{{/foreach}}</div>
                        </div>
                    </div>
                </div>
            </div>
        {{/next_post}}
    </div>
</div>
