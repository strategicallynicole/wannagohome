<div class="post-author">
    <div class="post-author-info clearfix">
        <h3>Written By:
            <a href="{{url}}">{{name}}</a>
        </h3>
        <h6>{{location}}
            -
        </h6>
        <ul class="social-icon circle branded social-icon-sm">
            <li>
                <a href="{{facebook}}">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </li>
            <li>
                <a href="{{twitter}}">
                    <i class="fab fa-twitter"></i>
                </a>
            </li>
            <li>
                <a href="{{linkedin}}">
                    <i class="fab fa-linkedin"></i>
                </a>
            </li>
        </ul>
        <p>{{bio}}</p>
    </div>
    <!-- /.post-author-info -->
</div>
<!-- /.post-author -->
